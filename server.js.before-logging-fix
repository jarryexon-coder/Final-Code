// =============================================================================
// STRIPE WEBHOOK HANDLER
// =============================================================================

app.post('/stripe-webhook', 
  express.raw({type: 'application/json'}),
  (req, res) => {
    const sig = req.headers['stripe-signature'];
    let event;

    try {
      event = stripe.webhooks.constructEvent(
        req.body, 
        sig, 
        process.env.STRIPE_WEBHOOK_SECRET
      );
      console.log(`âœ… Webhook received: ${event.type}`);
    } catch (err) {
      console.error('âŒ Webhook signature verification failed:', err.message);
      return res.status(400).send(`Webhook Error: ${err.message}`);
    }

    switch (event.type) {
      case 'checkout.session.completed':
        console.log('ğŸ’° Checkout completed!');
        handleCheckoutCompleted(event.data.object);
        break;
      case 'customer.subscription.created':
        console.log('ğŸ†• Subscription created!');
        handleSubscriptionCreated(event.data.object);
        break;
      case 'invoice.payment_succeeded':
        console.log('ğŸ’³ Payment succeeded!');
        handlePaymentSucceeded(event.data.object);
        break;
      case 'customer.subscription.deleted':
        console.log('âŒ Subscription canceled!');
        handleSubscriptionCanceled(event.data.object);
        break;
      default:
        console.log(`Unhandled event type: ${event.type}`);
    }

    res.json({received: true});
  }
);

async function handleCheckoutCompleted(session) {
  console.log(`ğŸ’° Checkout completed for session: ${session.id}`);
  console.log(`Customer: ${session.customer}, User: ${session.metadata?.userId}`);
  
  if (session.metadata?.userId) {
    try {
      console.log(`âœ… User ${session.metadata.userId} subscription updated`);
    } catch (error) {
      console.error('Error updating user subscription:', error);
    }
  }
}

async function handleSubscriptionCreated(subscription) {
  console.log(`ğŸ†• Subscription created: ${subscription.id}`);
}

async function handleSubscriptionCanceled(subscription) {
  console.log(`âŒ Subscription canceled: ${subscription.id}`);
}

async function handlePaymentSucceeded(invoice) {
  console.log(`ğŸ’³ Payment succeeded for invoice: ${invoice.id}`);
}

